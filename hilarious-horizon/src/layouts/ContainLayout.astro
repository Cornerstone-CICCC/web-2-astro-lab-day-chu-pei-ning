---
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import "../styles/global.css"
const { title, desc, category } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="description" content={desc} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
    {category && (
      <a href={`/${category}`}>Back to {category.toUpperCase()}</a>
    )}
		<div class="container">
			<slot />
		</div>
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
